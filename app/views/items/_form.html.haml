%h3 Add/Update an item
= form_for(@item, multipart: true) do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :picture
    = f.file_field :picture
  .form-group
    = f.submit "Submit", class: 'btn btn-primary'
